@page
@model WebApplicationHW1.Pages.Registration.EditModel
@using Microsoft.AspNetCore.Http; 
@{
    ViewData["Title"] = "Add";

    HttpContext.Session.SetString("CourseId", Model.Course.CourseID.ToString());
    HttpContext.Session.SetString("CourseCredits", Model.Course.Credits.ToString());

    Layout = "_DashboardStudent";

  

}


<div class="container-fluid ms-4">
    <div class="row">
        <div class="col-md-12 main">
            <center><h2 class="m-2">Add Course</h2></center>
        </div>
        <hr />
    </div>
    <h5>Would you like to register for @Model.Course.Department @Model.Course.CourseNumber with @Model.Course.InstructorLastName?</h5>
    <form method="post">
        <input type="hidden" asp-for="Course.CourseID" />
        <input type="submit" value="Add" class="btn btn-success" /> |
        <a asp-page="ClassRegister" asp-route-id="@Int32.Parse(HttpContext.Session.GetString("UserId"))">Back to Registration</a>
    </form>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
